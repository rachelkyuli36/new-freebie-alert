<div>
    <h2>Log In</h2>
    <%= form_tag '/login' do %>
        Username: <%= text_field_tag :username %><br>
        Password: <%= password_field_tag :password %><br>
        <%= submit_tag "Log In" %>
    <% end %>
    <%= link_to 'Create New Account', users_new_path, class: 'btn btn-secondary' %>
</div>